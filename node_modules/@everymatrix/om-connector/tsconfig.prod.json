{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES5",
        "lib": [
            "ES2017",
            "ES6"
        ],
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "declaration": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
